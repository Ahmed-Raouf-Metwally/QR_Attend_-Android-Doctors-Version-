<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/buttons"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/topic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:hint="enter topic tittle"
        />
    <TextView
        android:id="@+id/select_to_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topic_name"
        android:layout_marginTop="15dp"
        android:text="select file"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_constraintTop_toBottomOf="@id/select_to_upload"
        android:layout_marginTop="20dp"
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_right"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/green"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancel_add_lesson_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_cancel"
        android:backgroundTint="@color/red"
        />
</androidx.constraintlayout.widget.ConstraintLayout>