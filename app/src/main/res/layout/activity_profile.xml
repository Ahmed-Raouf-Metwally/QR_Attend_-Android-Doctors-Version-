<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17000000"
    tools:context=".user.ProfileActivity">
<ImageView
    android:layout_width="0dp"
    android:layout_height="155dp"
    android:id="@+id/profile_pic"
    android:src="@drawable/profile_logo"
     android:adjustViewBounds="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/name_profile_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        android:layout_marginTop="35dp"
        android:shadowColor="@color/black"
        android:gravity="center"
        android:text="Name"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fadingEdgeLength="3dp"
        android:fadingEdge="none"
        android:background="@drawable/buttons"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/email_prof_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_profile_view"
        android:layout_marginTop="30dp"
        android:text="Name@email.com"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/buttons"
        />
    <LinearLayout
        android:id="@+id/level_class_linearlayot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_prof_view"
        android:weightSum="2"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/level_prof_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="level"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/buttons"
            />
        <TextView
            android:id="@+id/class_prof_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="class"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/buttons"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_class_linearlayot"
        android:text="Sign Out"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_out_button"
        android:src="@drawable/qr_logo"
        android:adjustViewBounds="true"
        android:background="@drawable/buttons"
        android:layout_marginTop="30dp"
        android:backgroundTint="#C4000000"
        />
</androidx.constraintlayout.widget.ConstraintLayout>