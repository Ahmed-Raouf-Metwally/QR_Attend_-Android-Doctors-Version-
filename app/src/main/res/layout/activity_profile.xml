<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_doctor"
    tools:context=".user.ProfileActivity"
    >
<ImageView
    android:layout_width="0dp"
    android:layout_height="155dp"
    android:id="@+id/profile_pic"
    android:src="@drawable/profile_logo"
     android:adjustViewBounds="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="99dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/name_profile_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic"
        android:layout_marginTop="35dp"
        android:shadowColor="@color/black"
        android:gravity="center"
        android:text="Name"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fadingEdgeLength="3dp"
        android:fadingEdge="none"
        android:background="@drawable/buttons"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/email_prof_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_profile_view"
        android:layout_marginTop="30dp"
        android:text="Name@email.com"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@drawable/buttons"
        />
    <LinearLayout
        android:id="@+id/level_class_linearlayot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_prof_view"
        android:layout_marginTop="35dp"
        >


    </LinearLayout>
    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level_class_linearlayot"
        android:text="Sign Out"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttons"
        android:textColor="@color/black"
        android:gravity="center"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/home"/>

</androidx.constraintlayout.widget.ConstraintLayout>