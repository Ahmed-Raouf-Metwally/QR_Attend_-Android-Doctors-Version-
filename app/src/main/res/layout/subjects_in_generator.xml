<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/strocked_box"
    android:padding="6dp"
    app:layout_insetEdge="right"
    android:paddingRight="3dp"
    android:paddingLeft="3dp"
    android:paddingTop="2dp"
    android:layout_margin="5dp"
    >
    <ImageView
        android:id="@+id/background_views"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cs_logo"
        android:adjustViewBounds="true"
        android:foregroundGravity="bottom"
        android:background="@drawable/strocked_box"
        android:padding="5dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subject Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/background_views"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="3dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subject_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="progress percentage"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="0dp"
        android:layout_margin="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>