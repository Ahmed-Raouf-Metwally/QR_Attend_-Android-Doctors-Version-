<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/strocked_box"
    android:elevation="0dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/student_name_in_attendance_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="student name"
        android:textColorHint="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:id="@+id/student_image_in_attendance_list"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/student_name_in_attendance_list"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile_logo"
        android:adjustViewBounds="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/student_image_in_attendance_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name_in_attendance_list"
        android:hint="student id"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fire_student"
        app:layout_constraintTop_toBottomOf="@id/student_id"
        app:layout_constraintStart_toEndOf="@id/student_image_in_attendance_list"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_margin="15dp"
        app:elevation="10dp"
        android:layout_marginBottom="5dp"
        android:padding="25dp"
        app:srcCompat="@drawable/ic_delet"
        android:backgroundTint="@color/red"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>